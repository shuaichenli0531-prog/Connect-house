generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model SiteConfig {
  id                 Int      @id @default(1)
  brandName          String
  brandLogoUrl       String   @default("")
  taglineEn          String
  taglineZh          String
  missionEn          String
  missionZh          String
  heroBadgeEn        String
  heroBadgeZh        String
  heroTitle          String
  heroSubtitleEn     String
  heroSubtitleZh     String
  heroDescEn         String
  heroDescZh         String
  heroPrimaryCtaEn   String
  heroPrimaryCtaZh   String
  heroPrimaryLinkEn  String  @default("")
  heroPrimaryLinkZh  String  @default("")
  heroSecondaryCtaEn String
  heroSecondaryCtaZh String
  heroSecondaryLinkEn String @default("")
  heroSecondaryLinkZh String @default("")
  heroImageUrl       String?
  venueImageUrl      String?
  venueNameEn        String   @default("")
  venueNameZh        String   @default("")
  venueDescEn        String   @default("")
  venueDescZh        String   @default("")
  venueCapacityEn    String   @default("")
  venueCapacityZh    String   @default("")
  venueCtaEn         String   @default("Join Us")
  venueCtaZh         String   @default("加入我们")
  venueCtaLinkEn     String   @default("")
  venueCtaLinkZh     String   @default("")
  recentEventTitleEn String   @default("")
  recentEventTitleZh String   @default("")
  recentEventDescEn  String   @default("")
  recentEventDescZh  String   @default("")
  recentEventDate    String   @default("")
  recentEventImageUrl String  @default("")
  aboutTitleEn       String
  aboutTitleZh       String
  aboutLeadEn        String
  aboutLeadZh        String
  aboutPillars       String
  contactTitleEn     String
  contactTitleZh     String
  contactSubtitleEn  String
  contactSubtitleZh  String

  // House Information
  houseImages        String   @default("[]")
  landArea           String   @default("approx. 10,126 sqm (2.5 acres)")
  floorArea          String   @default("approx. 721 sqm (7,765 sq ft)")
  layout             String   @default("7b6b")
  capacity           String   @default("200 guests")

  // Contact Person
  contactName        String   @default("Cathy Chang")
  contactLinkedin    String   @default("https://www.linkedin.com/in/yxchang/")
  contactTwitter     String   @default("https://x.com/Cathy_c8i")
  contactMobile      String   @default("5108947404")
  contactWechat      String   @default("GNAHC0002")
  qrCodeUrl          String   @default("")

  // Section Visibility Toggles
  showProgramsSection Boolean  @default(true)
  showPartnersSection Boolean  @default(true)
  showPastEventsSection Boolean @default(true)
  showContactSection Boolean  @default(true)

  updatedAt          DateTime @updatedAt
}

model Program {
  id             Int     @id @default(autoincrement())
  type           String
  titleEn        String
  titleZh        String
  date           String
  location       String
  descriptionEn  String
  descriptionZh  String
  link           String
  imageUrl       String?
  sortOrder      Int     @default(0)
  published      Boolean @default(true)
}

model Insight {
  id             Int     @id @default(autoincrement())
  titleEn        String
  titleZh        String
  descriptionEn  String
  descriptionZh  String
  link           String
  imageUrl       String?
  sortOrder      Int     @default(0)
  published      Boolean @default(true)
}

model Partner {
  id        Int     @id @default(autoincrement())
  name      String
  logoUrl   String?
  sortOrder Int     @default(0)
  published Boolean @default(true)
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model PastEvent {
  id          Int     @id @default(autoincrement())
  titleEn     String
  titleZh     String
  descEn      String  @default("")
  descZh      String  @default("")
  imageUrl    String
  date        String  @default("")
  sortOrder   Int     @default(0)
  published   Boolean @default(true)
}
